extends layout

block content
  h1= title
  - var vi = results
  div(class="container-fluid")
    div(class="row m-1")
      each v, index in vi
        - let destination = 'dispatch("/vehicles/update?id=${v._id}")'
        div(class="col-sm-2", onclick=`buy(${index})`) #{v.type}, #{v.milage}, #{v.price}
          button.btn.btn-primary.ml-1(onclick=destination) Update
        script.
            function buy(a) {
                alert(`You purchased Item ${a+1}`);
            }
  
